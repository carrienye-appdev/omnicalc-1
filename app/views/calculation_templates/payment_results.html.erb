<h1>Payment Results</h1>

<dl>
  <dt>APR</dt>
  <dd><%= @apr_num.to_s( :percentage, { :precision => 4}) %></dd>
  <dt>Number of years</dt>
  <dd><%= @years_num.to_i %></dd>
  <dt>Principal</dt>
  <dd><%= @principal_num.to_s( :currency, { :precision => 2}) %></dd>
  <dt>Payment</dt>
  <dd><%= @payment_num.to_s( :currency, { :precision => 2}) %></dd>
</dl>

